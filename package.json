{
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "lint": "npm run lint:es && npm run lint:ts && npm run lint:prettier",
    "lint:es": "eslint --ext .ts",
    "lint:ts": "tsc --project ./tsconfig.json --noEmit",
    "lint:prettier": "prettier --list-different \"packages/**/src/**/*.ts\"",
    "fix": "npm run fix:es && npm run fix:prettier",
    "fix:es": "eslint --ext .ts ./ --cache --fix",
    "fix:prettier": "prettier --write \"packages/**/src/**/*.ts\""
  },
  "author": "xiaoYown",
  "license": "ISC",
  "devDependencies": {
    "conventional-changelog-cli": "^2.2.2"
  },
  "engines": {
    "node": ">=14",
    "pnpm": ">=6"
  },
  "packageManager": "pnpm@6.31.0"
}